@model dynamic

@{
    ViewData["Title"] = "Index";
    var ownedDocuments = Model.Owned;
    var sharedDocuments = Model.Shared;
}


<p>
    <a asp-action="Create"><img src="~/Images/add.png" style="width:110px"/></a>
    
</p>

<h4 style="margin:15px">My Documents</h4>
<div class="row">
    @foreach (var document in ownedDocuments)
    {
        <div class="col-2 justify-content-center align-items-center border" style="background-color:cornsilk;border-radius:18px;margin:10px;max-width:130px">
            <div class="d-flex justify-content-center align-items-center" style="font-size:100px;">
                <a style="text-decoration:none; color: black;" asp-action="Edit" asp-route-id="@document.Id"><img src="~/Images/docu.png" alt="ads" style="width:100px" /></a>
            </div>
            <span class="text-center d-flex align-items-center justify-content-center " style="font-weight: bold">@document.Title</span>
        </div>

    }
</div>
<h4 style="margin:15px">Shared With me</h4>
<div class="row">
    @foreach (var document in sharedDocuments)
    {
        <div class="col-2 justify-content-center align-items-center border" style="background-color:cornsilk;border-radius:18px;margin:10px;max-width:130px">
            <div class="d-flex justify-content-center align-items-center" style="font-size:100px;">
                <a style="text-decoration:none; color: black;" asp-action="Edit" asp-route-id="@document.Id"><img src="~/Images/docu.png" alt="ads" style="width:100px" /></a>
            </div>
            <span class="text-center d-flex align-items-center justify-content-center " style="font-weight: bold">@document.Title</span>
        </div>

    }
</div>
